useEffect(() => {
      const historyStorage = JSON.parse(localStorage.getItem('inProgressRecipes'));
      if (historyStorage && historyStorage[type][id]) {
        setIngredientsChecked([historyStorage[type][id]]);
      }
    }, [id, type]);

    useEffect(() => {
      const historyStorage = JSON.parse(localStorage.getItem('inProgressRecipes'));
      console.log(historyStorage, 'history');
      console.log(ingredientsChecked, 'ingredients');
      if (historyStorage !== null) {
        console.log('entrou');
        const firstSetStorage = {
          [ofType]: historyStorage[ofType],
          [type]: {
            [id]: JSON.stringify(ingredientsChecked),
            ...historyStorage[type],
          },
        };
        localStorage.setItem('inProgressRecipes', JSON.stringify(firstSetStorage));
      } else {
        const addSetStorage = {
          [ofType]: {},
          [type]: {
            [id]: [...ingredientsChecked],
          },
        };
        localStorage.setItem('inProgressRecipes', JSON.stringify(addSetStorage));
      }
    }, [ingredientsChecked, id, type, ofType]);